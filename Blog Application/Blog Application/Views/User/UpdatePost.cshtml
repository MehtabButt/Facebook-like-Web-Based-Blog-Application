@model Blog_Application.Models.Post

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="row justify-content-center">
        <div class="col-5" style="min-width:400px;">

            <div>

                <div class="text-white text-center" style="font-size:35px;">Update Post</div>

                <form method="post" asp-action="UpdatePost">
                    <div class="text-white" asp-validation-summary="ModelOnly"></div>
                    <div class="mb-3">
                        <label asp-for="@Model.PostId" class="form-label text-white">Id</label>
                        <input asp-for="@Model.PostId" class="form-control text-dark" readonly />
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.Title" class="form-label text-white"></label>
                        <input asp-for="@Model.Title" class="form-control text-dark" />
                        <span asp-validation-for="@Model.Title"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.Content" class="form-label text-white"></label>
                        <textarea asp-for="@Model.Content" rows="8" type="text" class="form-control text-dark" placeholder="What's on your mind?"></textarea>
                        <span asp-validation-for="@Model.Content"></span>
                    </div>

                    <input type="submit" class="btn btn-primary w-100" value="Post" />
                </form>

            </div>


        </div>










    </div>
</div>