
@model Blog_Application.Models.Post

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    bool isLoggedInUserPost;
    @if((string)TempData["LoggedInUser"]== Model.Username)
    {
        isLoggedInUserPost = true;
    }
    else
    {
        isLoggedInUserPost = false;
    }
    TempData.Keep("LoggedInUser");

}


<div class="row justify-content-center">

    <div class="col-5 mt-3 text-white" style="min-width:400px; border-radius: 10px; background-color: #242526;">

        @if (Model != null)
        {
            <div class="row pb-2">
                <div class="col-1 pt-2">
                    <img src="@Url.Content(@Model.UserProfilePicSrc)" alt="Profile Pic" style="border-radius:50%;" width="35" height="35" />
                </div>

                <div class="col-5 ml-2 pt-1  text-nowrap">
                    <div class="font-weight-bold">@Model.Name</div>
                    <div class="form-text mt-0" style="font-size:12px;">@Model.PostDate.ToString("dd MMMM yyyy 'at' hh:mm:tt")</div>
                </div>
                @if (isLoggedInUserPost)
                {
                    <div class="col pt-1 text-nowrap text-right">
                        <a class="btn btn-primary" asp-action="UpdatePost" asp-route-PostId="@Model.PostId">Update</a>
                        <a class="btn btn-danger" asp-action="DeletePost" asp-route-PostId="@Model.PostId">Delete</a>
                    </div>
                }


            </div>

            <div class="border-bottom border-secondary"></div>

            <div class="row pb-1 pl-3">
                <div class="text-capitalize w-100" style="font-size:18px;">@Model.Title</div>
                <div>@Model.Content</div>
            </div>
        }


    </div>






</div>
