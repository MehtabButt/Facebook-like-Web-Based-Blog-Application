@using Blog_Application.Models
@model Post

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="row justify-content-center">
        <div class="col-5" style="min-width:400px;">

            <div>

                <div class="text-white text-center" style="font-size:35px;">Create Post</div>

                <form method="post" action="/User/CreatePost">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="mb-3">
                        <label asp-for="Title" class="form-label text-white"></label>
                        <input asp-for="Title" class="form-control text-dark" />
                        <span asp-validation-for="Title"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-white">Content</label>
                        <textarea asp-for="Content" rows="8" type="text" class="form-control text-dark" placeholder="What's on your mind?"></textarea>
                        <span asp-validation-for="Content"></span>
                    </div>

                    <input type="submit" class="btn btn-primary w-100" value="Post" />
                </form>

            </div>


        </div>

        







    
</div>
</div>
