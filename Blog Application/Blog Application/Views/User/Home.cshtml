@model List<Blog_Application.Models.Post>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}

<div class="container">
    <div class="row justify-content-center">

        <div class="col-5 mt-2" style="min-width: 400px; background-color: #242526; border-radius: 10px;">

            <div class="text-white pt-2 font-weight-bold text-center" style="font-size:15px;">Create Post</div>

            <div class="border-bottom border-secondary pt-2"></div>

            <div class="row align-items-center pb-3 pt-2">
                <div class="col-1 " style="font-size:35px;color:#2d88ff;">
                    <img src="~/images/person-circle.svg" alt="Home" width="32" height="32" />
                </div>


                <div class="col ml-2">
                    <a class="btn rounded-pill text-white-50 w-100 text-left" asp-controller="User" asp-action="CreatePost" style="background-color: #3a3b3c;">What's on your mind?</a>

                </div>
            </div>

        </div>

    </div>

    @if (Model != null)
    {
        @foreach (Blog_Application.Models.Post post in Model)
        {
            <div class="row justify-content-center">

                <a class="col-5 mt-3 text-white btn text-left" asp-action="ViewPost" asp-route-PostId="@post.PostId" style="min-width: 400px; max-height: 165px; overflow: hidden; border-radius: 10px; background-color: #242526;">

                    <div class="row pb-2 ">
                        <div class="col-1 pt-2">
                            <img src="@Url.Content(post.UserProfilePicSrc)" alt="ProfilePic" style="border-radius:50%;display:inline-block;" width="40" height="40" />
                        </div>
                        <div class="col ml-2 pt-1 ">
                            <div class="font-weight-bold ">@post.Name</div>
                            <div class="form-text mt-0" style="font-size:12px;">@post.PostDate.ToString("dd MMMM yyyy 'at' hh:mm:tt")</div>
                        </div>
                    </div>

                    <div class="border-bottom border-secondary"></div>

                    <div class="row pb-1 pl-3">
                        <div class="text-capitalize w-100" style="font-size:18px;">@post.Title</div>
                        <div>@post.Content</div>
                    </div>


                </a>



            </div>
        }
    }
















</div>
