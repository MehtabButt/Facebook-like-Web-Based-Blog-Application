@using Blog_Application.Models
@model SignUpUser

<html>

<head>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <style>
        .button {
            background-color: #5579b2;
            color: white;
            border: none;
            font-size: 12px;
            cursor: pointer;
            padding: 2px 8px;
            font-weight: 700;
            /*
            border: 2px solid black;*/
        }

            .button:hover {
                background-color: #375b94;
            }
    </style>
</head>
<body style="background:#f2f7f3;">


    <div style="height:90px;width:100%;background-color:#41659e;position:relative; ">
        <span style="margin-left:15%;font-size:32px;position:absolute;top:50%;transform:translate(0,-50%);font-family:fantasy;color:white;">
            Blog App
        </span>
       
        <span>
            <div style=" position: absolute; top: 50%; transform: translate(0,-50%); right: 15%;">
                <a asp-action="Login" class="border border-1 border-dark button text-white" >
                    Log Into Existing Account
                </a>
            </div>
           
        </span>

    </div>

    <div class="container h-100">


        <div class="row h-100 mt-3 justify-content-center ">




            <div class="col-sm-auto">

                <p class="text-center font-weight-bold" style="font-size:35px;white-space:nowrap;">Create a New Account</p>
                <p class="text-start" style="font-size:20px;white-space:nowrap;">It's quick and easy.</p>
                
                <form method="post" action="/Home/SignUp">
                    <div asp-validation-summary="ModelOnly" class="text-white"></div>
                    <div class="row">
                        <div class="col">
                            <label></label>
                            <input asp-for="FirstName" placeholder="First Name" class="form-control" />
                            <span asp-validation-for="FirstName"></span>
                        </div>
                        <div class="col">
                            <label></label>
                            <input asp-for="LastName" placeholder="Last Name" class="form-control" />
                            <span asp-validation-for="LastName"></span>
                        </div>
                    </div>


                    <div>
                        <label></label>
                        <input asp-for="Username" placeholder="Username" class="form-control" />
                        <span asp-validation-for="Username"></span>
                    </div>

                    <div>
                        <label></label>
                        <input asp-for="Email" placeholder="Email" class="form-control" />
                        <span asp-validation-for="Email"></span>
                    </div>
                    
                    <div>
                        <label></label>
                        <input type="password" asp-for="Password" placeholder="Password" class="form-control" />
                        <span asp-validation-for="Password"></span>
                    </div>

                    <div>
                        <label></label>
                        <input type="password" asp-for="PasswordConfirm" placeholder="Confirm Password" class="form-control" />
                        <span asp-validation-for="PasswordConfirm"></span>
                    </div>

                   
                    <input type="submit" class="btn btn-success mt-3" style="width:200px;font-weight:bold;font-size:20px;" value="Sign Up" />


                </form>
            </div>

        </div>


    </div>



</body>
</html>