@model Blog_Application.Models.UpdateUser

@{ 
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    string fullProfilePicSrc = "~/images/User_Profile_Pics/" + Model.ProfilePicSrc;
}

<div class="container-fluid">


    <div class="row mt-3 justify-content-center ">

        <div class="col-sm-auto text-white">

            <p class="text-center font-weight-bold" style="font-size:35px;white-space:nowrap;">Update User</p>

            <div class="text-center">
                <img src="@Url.Content(fullProfilePicSrc)" asp-append-version="true" alt="Profile Pic" style="border-radius:50%;" width="100" height="100" />

            </div>


            <form method="post" action="/Admin/Update">
                <div asp-validation-summary="ModelOnly" class="text-white"></div>
                <div class="row">
                    <div class="col">
                        <label asp-for="FirstName"></label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName"></span>
                    </div>
                    <div class="col">
                        <label asp-for="LastName"></label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName"></span>
                    </div>
                </div>


                <div>
                    <label asp-for="Username"></label>
                    <input asp-for="Username" class="form-control" readonly />
                    <span asp-validation-for="Username"></span>
                </div>

                <div>
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email"></span>
                </div>

                <div>
                    <label asp-for="Password"></label>
                    <input asp-for="Password" type="password" class="form-control" />
                    <div class="form-text mt-0 text-warning" style="font-size:12px;">Enter a new password if you want to change.</div>
                    <span asp-validation-for="Password"></span>
                </div>

                <div>
                    <label asp-for="PasswordConfirm"></label>
                    <input asp-for="PasswordConfirm" type="password" class="form-control" />
                    <span asp-validation-for="PasswordConfirm"></span>
                </div>

                <div style="display:none;">
                    <input asp-for="ProfilePicSrc" />
                </div>

                <input type="submit" class="btn btn-success mt-3" style="width:200px;font-weight:bold;font-size:20px;" value="Update" />


            </form>
        </div>

    </div>


</div>